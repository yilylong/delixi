    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/item_card_selected" />
            <corners android:radius="2dp" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/item_card_selected" />
            <corners android:radius="2dp" />
